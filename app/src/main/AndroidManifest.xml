<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:label="Holoners"
        android:theme="@style/Theme.Holoners"
        tools:targetApi="31">
        <activity
            android:name="auth.ActivityLogin"
            android:theme="@style/Theme.login"
            android:exported="false" />
        <activity
            android:name="auth.ActivityRegistration"
            android:theme="@style/Theme.login"
            android:exported="false" />
        <activity
            android:name=".TalentActivity"
            android:exported="false" />
        <activity
            android:name="Talent.DetailActivity"
            android:exported="false" />
        <activity
            android:name="Talent.CreateActivity"
            android:exported="false" />
        <activity
            android:name="Talent.UpdateActivity"
            android:exported="false" />
        <activity
            android:name="Article.DetailActivity"
            android:exported="false" />
        <activity
            android:name="Music.DetailActivity"
            android:exported="false" />
        <activity
            android:name="Music.UpdateActivity"
            android:exported="false" />
        <activity
            android:name="Music.CreateActivity"
            android:exported="false" />
        <activity
            android:name="Article.UpdateActivity"
            android:exported="false" />
        <activity
            android:name="Article.CreateActivity"
            android:exported="false" />
        <activity
            android:name="Music.CreateActivity"
            android:exported="false" />
        <activity
            android:name=".MusicActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArticleActivity"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>