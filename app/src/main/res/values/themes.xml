<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Warehouse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Warehouse" parent="Base.Theme.Warehouse" />

    <style name="Theme.Warehouse.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/naturalPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/naturalPrimaryVariantColor</item>
        <item name="colorOnPrimary">@color/naturalOnPrimaryColor</item>
        <item name="colorSecondary">@color/naturalSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/naturalSecondaryVariantColor</item>
        <item name="colorOnSecondary">@color/naturalOnSecondaryColor</item>
    </style>

    <style name="Theme.Warehouse.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Warehouse.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/white</item> <!-- Ubah ini menjadi putih -->
    </style>

    <!-- Tema Natural untuk LoginActivity dan SplashScreen -->
    <style name="Theme.Warehouse.Natural" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/naturalPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/naturalPrimaryVariantColor</item>
        <item name="colorOnPrimary">@color/naturalOnPrimaryColor</item>
        <item name="colorSecondary">@color/naturalSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/naturalSecondaryVariantColor</item>
        <item name="colorOnSecondary">@color/naturalOnSecondaryColor</item>
        <!-- Customize your natural theme here -->
    </style>
    <!-- Base application theme -->
    <style name="Theme.warehouse.CRUD" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/naturalPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/naturalPrimaryVariantColor</item>
        <item name="colorOnPrimary">@color/naturalOnPrimaryColor</item>
        <item name="colorSecondary">@color/naturalSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/naturalSecondaryVariantColor</item>
        <item name="colorOnSecondary">@color/naturalOnSecondaryColor</item>

        <!-- Ensures dark icons on light status bar -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>

        <!-- ActionBar customization -->
        <item name="actionBarStyle">@style/ActionBarCustom</item>
        <item name="android:actionBarStyle">@style/ActionBarCustom</item>
    </style>

    <style name="ActionBarCustom" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionBarBackground</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- ActionBar style -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#000000</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:homeAsUpIndicator">@drawable/baseline_arrow_back_24</item> <!-- Ensure this drawable exists -->
    </style>

    <!-- ActionBar title text style -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
